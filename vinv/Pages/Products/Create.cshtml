@page
@model CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CreateProductRequest.Name" class="control-label"></label>
        <input asp-for="CreateProductRequest.Name" class="form-control" />
        <span asp-validation-for="CreateProductRequest.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreateProductRequest.CategoryId" class="control-label"></label>
        <select asp-for="CreateProductRequest.CategoryId" asp-items="Model.CategoryOptions" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CreateProductRequest.CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}