@page
@model CreateModel
@{
ViewData["Title"] = "Create Product Stock";
}

<h1>Create Product Stock</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CreateRequest.Stock" class="control-label"></label>
        <input asp-for="CreateRequest.Stock" class="form-control" />
        <span asp-validation-for="CreateRequest.Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreateRequest.MinimalStock" class="control-label"></label>
        <input asp-for="CreateRequest.MinimalStock" class="form-control" />
        <span asp-validation-for="CreateRequest.MinimalStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreateRequest.ProductId" class="control-label"></label>
        <select asp-for="CreateRequest.ProductId" asp-items="Model.ProductOptions" class="form-control">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="CreateRequest.ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}