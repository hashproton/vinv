@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Product Stock";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product Stock</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStock.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStock.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStock.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStock.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStock.MinimalStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStock.MinimalStock)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductStock.IsAvailable)
            {
            <span class="badge badge-success">Available</span>
            }
            else
            {
            <span class="badge badge-warning">Low Stock</span>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ProductStock.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>