@page
@model IndexModel
@{
ViewData["Title"] = "Product Stock List";
}

<h1>Product Stock List</h1>

<form method="get">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ViewModel.ProductNameFilter">Product Name</label>
                <input asp-for="ViewModel.ProductNameFilter" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ViewModel.StockStatusFilter">Stock Status</label>
                <select asp-for="ViewModel.StockStatusFilter" class="form-control">
                    <option value="">All</option>
                    <option value="Available">Available</option>
                    <option value="LowStock">Low Stock</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ViewModel.MinStockFilter">Min Stock</label>
                <input asp-for="ViewModel.MinStockFilter" class="form-control" type="number" step="0.01" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ViewModel.MaxStockFilter">Max Stock</label>
                <input asp-for="ViewModel.MaxStockFilter" class="form-control" type="number" step="0.01" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Apply Filters</button>
        <a asp-page="./Index" class="btn btn-secondary">Clear Filters</a>
    </div>
</form>

<table class="table">
    <thead>
    <tr>
        <th>Product</th>
        <th>Current Stock</th>
        <th>Minimal Stock</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ViewModel.ProductStocks)
    {
    <tr>
        <td>@item.Product.Name</td>
        <td>@item.Stock</td>
        <td>@item.MinimalStock</td>
        <td>
            @if (item.IsAvailable)
            {
            <span class="badge badge-success">Available</span>
            }
            else
            {
            <span class="badge badge-warning">Low Stock</span>
            }
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>